{
  "manifest_version": 2,
  "name": "あの頃の自作TCGアシスタント",
  "version": "1.7.0",
  "description": "unityroomの『あの頃の自作TCG』の体験を向上させるための拡張機能です。",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://unityroom.com/games/anokorotcg*"],
      "css": ["css/style.css"],
      "js": ["js/main.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "json/cards.json",
    "images/cards/*.png",
    "css/style.css",
    "css/popup.css",
    "html/index.html",
    "html/sections/*.html",
    "js/main.js",
    "js/sections/*.js",
    "images/*.png",
    "js/lib/firebase/firebase-app.js",    
    "js/lib/firebase/firebase-auth.js",   
    "js/lib/firebase/firebase-firestore.js"
  ],
  "options_page": "html/options.html",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "拡張機能のポップアップを開く"
    },
    "open-home-section": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "ホームセクションを開く"
    },
    "open-memo-section": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "MacCtrl+Shift+M"
      },
      "description": "メモセクションを開く"
    },
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "サイドバーの表示/非表示を切り替える"
    }
  }
}
