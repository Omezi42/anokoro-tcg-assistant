{
  "manifest_version": 3,
  "name": "あの頃の自作TCG拡張機能",
  "version": "4.0.0",
  "description": "unityroomの『あの頃の自作TCG』の体験を向上させるための拡張機能です。",
  "permissions": [
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://unityroom.com/games/anokorotcg*",
    "https://omezi42.github.io/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://unityroom.com/games/anokorotcg*"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/main.js"
      ]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "json/*.json",
        "images/*.png",
        "html/sections/*.html",
        "js/sections/*.js",
        "css/*.css"
      ],
      "matches": [
        "https://unityroom.com/games/anokorotcg*"
      ]
    }
  ],
  "options_page": "html/options.html",
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "サイドバーの表示/非表示を切り替える"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "anokoro-tcg-assistant@omezi42.com"
    }
  }
}
